import { Router } from 'express'
import { SubmissionController } from '../controllers/submission.controller'
import { authenticate } from '../middleware/auth'

const router = Router()
const submissionController = new SubmissionController()

router.get('/', authenticate, submissionController.getSubmissions.bind(submissionController))
router.get('/:id', authenticate, submissionController.getSubmission.bind(submissionController))
router.delete('/:id', authenticate, submissionController.deleteSubmission.bind(submissionController))

export default router